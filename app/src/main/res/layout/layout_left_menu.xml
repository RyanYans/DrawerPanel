<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:background="@drawable/menu_bg"
        android:orientation="vertical">

        <!--沉浸框-->
        <include layout="@layout/toolbar_left_layout" />

        <TextView
            style="@style/left_tab_btn"
            android:drawableLeft="@drawable/tab_news"
            android:onClick="onTabClick"
            android:text="新闻" />
        <TextView
            style="@style/left_tab_btn"
            android:drawableLeft="@drawable/tab_read"
            android:onClick="onTabClick"
            android:text="订阅" />
        <TextView
            style="@style/left_tab_btn"
            android:drawableLeft="@drawable/tab_local"
            android:onClick="onTabClick"
            android:text="本地" />
        <TextView
            style="@style/left_tab_btn"
            android:drawableLeft="@drawable/tab_ties"
            android:onClick="onTabClick"
            android:text="跟帖" />
        <TextView
            style="@style/left_tab_btn"
            android:drawableLeft="@drawable/tab_pics"
            android:onClick="onTabClick"
            android:text="图片" />
        <TextView
            style="@style/left_tab_btn"
            android:drawableLeft="@drawable/tab_ugc"
            android:onClick="onTabClick"
            android:text="话题" />
        <TextView
            style="@style/left_tab_btn"
            android:drawableLeft="@drawable/tab_focus"
            android:onClick="onTabClick"
            android:text="新闻" />


    </LinearLayout>

</ScrollView>